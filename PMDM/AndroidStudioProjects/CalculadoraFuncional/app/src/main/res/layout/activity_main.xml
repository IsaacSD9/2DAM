<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Visor -->
    <TextView
        android:id="@+id/visor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/visor_suggestion"
        style="@style/MiVisorStyle"
        android:padding="16dp"
        android:gravity="center"/>

    <!-- Botones de números y operaciones -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5">

        <!-- Botones de la primera fila (usando MyMaterialButtonStyle) -->
        <Button
            android:text="7"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onButtonClick"/>

        <Button
            android:text="8"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onButtonClick"/>

        <Button
            android:text="9"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onButtonClick"/>

        <Button
            android:text="/"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onOperatorClick"/>

        <!-- Segunda fila -->
        <Button
            android:text="4"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onButtonClick"/>

        <Button
            android:text="5"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onButtonClick"/>

        <Button
            android:text="6"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onButtonClick"/>

        <Button
            android:text="*"
            style="@style/MyMaterialButtonStyle"
            android:onClick="onOperatorClick"/>

        <!-- Tercera fila (usando MyMaterialButtonStyleBis) -->
        <Button
            android:text="1"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onButtonClick"/>

        <Button
            android:text="2"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onButtonClick"/>

        <Button
            android:text="3"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onButtonClick"/>

        <Button
            android:text="-"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onOperatorClick"/>

        <!-- Cuarta fila -->
        <Button
            android:text="0"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onButtonClick"/>

        <Button
            android:text="."
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onButtonClick"/>

        <Button
            android:text="^"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onOperatorClick"/>

        <Button
            android:text="+"
            style="@style/MyMaterialButtonStyleBis"
            android:onClick="onOperatorClick"/>

        <!-- Botón igual -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:backgroundTint="#FF0000"
            android:onClick="onEqualClick"
            android:text="=" />
    </GridLayout>
</LinearLayout>
