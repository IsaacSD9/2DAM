<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <Button
        android:id="@+id/miBoton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pantalla 2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"


        />

    <Button android:id="@+id/miBoton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pantalla 3"
        android:layout_below="@id/miBoton1"
        android:layout_centerHorizontal="true"

       />

    <Button android:id="@+id/miBoton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pantalla 4"
        android:layout_below="@id/miBoton2"
        android:layout_centerHorizontal="true"

       />
</RelativeLayout>